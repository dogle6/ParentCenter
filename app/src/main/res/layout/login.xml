<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/PC_Blue"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/login_tableLayout_card"
        android:layout_width="302dp"
        android:layout_height="358dp"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="54dp"

        android:layout_marginTop="38dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginBottom="219dp"
        android:background="@drawable/drop_shadow"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_imageView_header"
        app:layout_constraintVertical_bias="0.19999999">

        <TableRow
            android:id="@+id/login_row_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="50dp"
            tools:layout_editor_absoluteX="-129dp"
            tools:layout_editor_absoluteY="179dp">

            <EditText
                android:id="@+id/login_editText_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Username"
                android:inputType="text"
                android:textStyle="italic" />
        </TableRow>

        <TableRow
            android:id="@+id/login_row_password"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:gravity="center"
            android:paddingTop="25dp"
            android:paddingBottom="25dp">

            <EditText
                android:id="@+id/login_editText_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:textStyle="italic" />
        </TableRow>

        <TableRow
            android:id="@+id/login_row_buttons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            tools:layout_editor_absoluteX="-139dp"
            tools:layout_editor_absoluteY="293dp">


            <ImageButton
                android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:src="@drawable/login_button">

            </ImageButton>

        </TableRow>

        <TableRow
            android:id="@+id/login_row_signUp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="10dp"
            tools:layout_editor_absoluteX="-139dp"
            tools:layout_editor_absoluteY="293dp">


            <TextView
                android:id="@+id/login_textView_signUp"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/sign_button"
                android:textColor="@color/ParentCenter_grey"
                android:textStyle="italic" />

        </TableRow>

        <TableRow
            android:id="@+id/login_row_progressbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="10dp"
            tools:layout_editor_absoluteX="-139dp"
            tools:layout_editor_absoluteY="293dp">


            <ProgressBar
                android:id="@+id/login_progressbar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:startColor="@color/PC_Shadow"
                tools:layout_editor_absoluteX="156dp"
                tools:layout_editor_absoluteY="476dp"
                android:indeterminate="true"
                android:indeterminateTintMode="src_atop"
                android:indeterminateTint="@color/PC_Blue"/>

        </TableRow>

        <TableRow
            android:id="@+id/login_row_progressbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="10dp"
            tools:layout_editor_absoluteX="-139dp"
            tools:layout_editor_absoluteY="293dp">
            <TextView
                android:id="@+id/login_textView_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"/>
        </TableRow>


    </TableLayout>


    <ImageView
        android:id="@+id/login_imageView_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/header" />

</androidx.constraintlayout.widget.ConstraintLayout>