<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/PC_Blue"
    tools:context=".Home">

    <TableLayout
        android:id="@+id/login_tableLayout_card"
        android:layout_width="360dp"
        android:layout_height="415dp"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="54dp"

        android:layout_marginTop="38dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginBottom="219dp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_imageView_header"
        app:layout_constraintVertical_bias="0.19999999">


        <TableRow
            android:id="@+id/home_row_notes"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:gravity="center"
            android:paddingTop="25dp"
            android:paddingBottom="25dp">

            <ImageButton
                android:id="@+id/home_button_notes"
                android:layout_width="wrap_content"
                android:onClick="onClick"
                android:layout_height="wrap_content"
                android:background="@color/PC_Blue"
                android:src="@drawable/button_notes"></ImageButton>
        </TableRow>

        <TableRow
            android:id="@+id/home_row_schedule"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:gravity="center"
            android:paddingTop="25dp"
            android:paddingBottom="25dp">

            <ImageButton
                android:id="@+id/home_button_schedule"
                android:layout_width="wrap_content"
                android:onClick="onClick"
                android:layout_height="wrap_content"
                android:background="@color/PC_Blue"
                android:src="@drawable/button_schedule"></ImageButton>
        </TableRow>

        <TableRow
            android:id="@+id/home_row_camera"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:gravity="center"
            android:paddingTop="25dp"
            android:paddingBottom="25dp">

            <ImageButton
                android:id="@+id/home_button_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:background="@color/PC_Blue"
                android:src="@drawable/button_camera"></ImageButton>
        </TableRow>

        <TableRow
            android:id="@+id/home_row_sign_out"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:gravity="center"
            android:paddingTop="25dp"
            android:paddingBottom="25dp">

            <ImageButton
                android:id="@+id/home_button_sign_out"
                android:layout_width="wrap_content"
                android:onClick="onClick"
                android:layout_height="wrap_content"
                android:background="@color/PC_Blue"
                android:src="@drawable/button_sign_out"></ImageButton>
        </TableRow>


    </TableLayout>


    <ImageView
        android:id="@+id/login_imageView_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/header" />

</androidx.constraintlayout.widget.ConstraintLayout>