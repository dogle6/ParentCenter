<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/PC_Blue">

    <ImageView
        android:id="@+id/login_imageView_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/header" />

    <LinearLayout
        android:id="@+id/login_linearLayout_card"
        android:layout_width="281dp"
        android:layout_height="422dp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@id/login_imageView_header"

        android:layout_alignBottom="@+id/login_imageView_header"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-422dp"
        android:background="@drawable/drop_shadow"
        android:orientation="vertical">


        <EditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword" />
    </LinearLayout>


</RelativeLayout>